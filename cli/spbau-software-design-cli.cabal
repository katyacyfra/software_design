  build-depends:       base >=4.09 && <4.11,
                       directory,
                       process,
                       parsec,
                       mtl,
                       regex-tdfa
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite test-cli
  type:                exitcode-stdio-1.0
  main-is:             Main.hs
  build-depends:       base >=4.09 && <4.11,
                       directory,
                       process,
                       parsec,
                       mtl,
                       regex-tdfa,
                       HUnit
  hs-source-dirs:      test, src
  other-modules:       CommandTest, ParseTest, SentenceTest, Command,
                       Environment, Parse, Sentence, String
